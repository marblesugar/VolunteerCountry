.body{
  width: 100%;
  background-color: white;
}
.img1{
  position:absolute;
  left:1rpx; top:0rpx;
  z-index:-2;
  height: 1200rpx;width: 100%;
}
.img2{
  position:absolute;
  left:0rpx;top:700rpx;
  z-index:-1;
  height: 600rpx;width: 100%;
  background-color: rgb(0,0,0,0);
}
#form1{
  position:absolute;
  left:10%;top:333rpx;
  z-index:0;
  width: 80%;
  padding: 15rpx;
  background-color: rgb(255,255,255,0.8);
  border-radius: 20px;
  box-shadow:0rpx 5rpx 10rpx 4rpx rgb(0,0,0,0.3);
  animation: name duration timing-function delay iteration-count direction fill-mode;
  animation:fadenum 7s 1;

}
@keyframes fadenum{
   0%{opacity: 0;}
   100%{opacity: 1;}
}

#title{
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
