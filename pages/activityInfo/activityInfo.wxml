<!--pages/activityinfo/activityinfo.wxml-->
<view class="body">
    <scroll-view scroll-x class="bg-white nav text-center padding">
        <view class="cu-item {{index==TabCur?'text-blue cur':''}}" wx:for="{{list}}" wx:key bindtap="tabSelect" data-id="{{index}}">
            {{list[index]}}
        </view>
    </scroll-view>

    <block  wx:if="{{TabCur==0}}">
        <view class="bg-white shadow-warp margin padding" style="width: 90%;">
            <view class="text-bold text-black text-center margin">
                社区联防联控志愿服务承诺书</view>
            <view id="innerbox"> {{content1}}</view>
        </view>
        <view class="text-center margin-top-lg">我同意：<switch class="red sm"></switch>
        </view>
        
    </block>

    <block  wx:if="{{TabCur==1}}">
    <image src="/image/i.png" mode="scaleToFill" style="width: 200rpx;height: 200rpx;margin-left: 33%;"></image>
        <view class="grid col-{{index+1}} margin-bottom text-left" wx:for="{{list1}}" wx:key="{{index}}">
      <view class="solids-bottom padding margin-left margin-right" >
      项目编码：{{list1[index].number}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      项目名称：{{list1[index].name}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      项目名称：{{list1[index].name}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      发布组织：{{list1[index].publisher}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      服务日期：{{list1[index].date}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      服务时间：{{list1[index].time}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      开始报名：{{list1[index].begin}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      活动地点：{{list1[index].place}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      联系人：{{list1[index].person}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      联系电话：{{list1[index].phone}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      招聘人数：{{list1[index].account}}
      </view>
      <view class="solids-bottom padding margin-left margin-right" >
      年龄限制：{{list1[index].limit}}
      </view>
    </view>
    <button class="cu-btn bg-red text-center margin" style="margin-left: 20%;">我要报名</button>
    </block>

    <block  wx:if="{{TabCur==2}}">
        <view class="margin" id="innerbox"> {{list1[0].content}}</view>
    </block>

</view>