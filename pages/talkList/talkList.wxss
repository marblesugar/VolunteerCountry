/* pages/talklist/talklist.wxss */
.back {
    position: absolute;
    background-color:#F06565;
    top:0;
    left:0;
    height: 450rpx;
    width: 100%;
    border-radius: 0 0 250rpx 250rpx;

}
.body{
    width: 90%;
    margin-left: 5%;
    padding-top: 30rpx;
    /* margin-bottom: 150rpx; */
    padding-bottom: 160rpx;
}
#content{
    text-indent:2em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    word-break: break-all;      /* 注意这个文字多行很重要 */
    -webkit-box-orient: vertical;
    margin-bottom: 40rpx;
}
